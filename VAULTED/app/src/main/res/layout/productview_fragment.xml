<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".ProductViewFragment">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@android:color/white">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                android:padding="8dp"
                android:src="@drawable/outline_arrow_back_ios_new_24"
                app:tint="@color/black" />

            <ImageButton
                android:id="@+id/bookmarkButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="26dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/bookmark"
                android:src="@drawable/outline_bookmark_heart_24"
                app:tint="@android:color/black" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                android:src="@drawable/nb9060" />

            <!-- Product Name -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="9060 'Black Cement'"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Product Brand -->
            <TextView
                android:id="@+id/productBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="New Balance"
                android:textColor="#BDBDBD"
                android:textSize="16sp"
                android:textStyle="italic" />

            <!-- Product Description -->
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/product_description_goes_here"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:typeface="serif" />

            <!-- Store Link Label -->
            <TextView
                android:id="@+id/itemIdentifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/where_to_find_this_product_for_purchase"
                android:textAlignment="center"
                android:textColor="#DDDDDD"
                android:textSize="16sp"
                android:typeface="serif" />

            <!-- Clickable Store URL -->
            <TextView
                android:id="@+id/itemURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="https://www.farfetch.com/za/shopping/men/new-balance-9060-sneakers-item-27684560.aspx?"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>